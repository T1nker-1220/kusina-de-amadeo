{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "excludeFiles": ["functions/**/*"]
      }
    }
  ],
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./functions/",
  "rewrites": [
    { "source": "/(.*)", "destination": "/" }
  ]
}
